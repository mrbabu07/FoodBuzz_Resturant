# Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://yourdomain.com

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/foodbuzz?retryWrites=true&w=majority

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Service (Choose one)
# Option 1: SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Option 2: AWS SES
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# EMAIL_FROM=noreply@yourdomain.com

# Option 3: Gmail (Not recommended for production)
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-specific-password

# Payment Gateway
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
PAYMENT_SUCCESS_URL=https://yourdomain.com/payment-success
PAYMENT_CANCEL_URL=https://yourdomain.com/payment-cancel

# Push Notifications (Web Push)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# Error Tracking (Optional but recommended)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# File Upload (Optional - if using cloud storage)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Security
BCRYPT_ROUNDS=12
TOKEN_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_ANALYTICS=true

# Third-party Services
TAWK_TO_PROPERTY_ID=your-tawk-to-id
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/production.log

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
